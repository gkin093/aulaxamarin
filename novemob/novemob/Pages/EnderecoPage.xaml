	<ContentPage.Content>
		<ScrollView Orientation="Vertical">
			<StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">

				<maps:Map x:Name="map" WidthRequest="300" HeightRequest="300" IsShowingUser="true" />

				<Entry x:Name="txtEndereco" WidthRequest="200" TextColor="Black" Unfocused="BuscaCoordenada_Unfocused"/>
